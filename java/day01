package my.day01;

public class DataTypeExam {
    public static void main(String[] args) {
        // 1. 정수형 변수 선언
        int distance;
        // 변수 초기화
        distance = 340 * 60 * 60;
        System.out.println("소리가 1시간 동안 가는 거리:" +distance);

        /* 2. 실수형 변수 선언
             반지름 변수 : radius
             원의 넓리 변수 : area
             변수 초기화
         */
        double radius, area;
        radius = 10.0;
        area= radius *radius * 3.14;
        System.out.println("반지름이" + radius +"인 원의 넓이:" +area);

    }
}
